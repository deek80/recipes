name: Deploy

on:
  push:
    branches: master

jobs:
  deploy-to-gh-pages:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v2
    - uses: actions/setup-node@v1
      with:
        node-version: '13.x'
    - run: |
        git config user.name "deek80"
        git config user.email "37046246+deek80@users.noreply.github.com"
        npm ci
        npm run deploy -- --repo "https://${{ github.actor }}:${{ secrets.GITHUB_TOKEN }}@github.com/${{ github.repository }}.git"
